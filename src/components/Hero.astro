<section class="hero-section">
  <div class="video-background">
    <!-- 
      NOTE: Replace this with a high-quality, muted, and grainy video.
      Ideally something abstract, like distorted city lights, grainy textures, or slow-motion smoke.
      For now, we'll use a placeholder background color.
       <video playsinline autoplay muted loop poster="/videos/poster.jpg">
      <source src="/videos/hero-background.mp4" type="video/mp4">
      Your browser does not support the video tag.
    </video>
    -->
  </div>
  <div class="hero-overlay"></div>
  <div class="hero-content container">
    <h1 class="hero-title">ANTAGONIST</h1>
    <p class="hero-subtitle">NEW COLLECTION // FALL '25</p>
    <a href="/opium" class="cta-button">EXPLORE THE COLLECTION</a>
  </div>
</section>

<style>
  .hero-section {
    position: relative;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    overflow: hidden;
    color: var(--color-white);
    background-image: url("/giphy.gif");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  .video-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .video-background video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.7);
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .hero-title {
    font-family: var(--font-display);
    font-size: clamp(4rem, 10vw, 8rem);
    font-style: italic;
    font-weight: 900;
    color: var(--color-white);
    text-shadow: 2px 2px 10px rgba(255, 0, 0, 0.5);
    margin: 0;
    line-height: 1;
    letter-spacing: 4px;
  }

  .hero-subtitle {
    font-family: var(--font-mono);
    font-size: 1rem;
    color: var(--text-muted);
    letter-spacing: 5px;
    text-transform: uppercase;
    margin: 1.5rem 0;
  }

  .cta-button {
    font-family: var(--font-main);
    font-weight: bold;
    font-size: 1rem;
    color: var(--color-white);
    background-color: transparent;
    border: 2px solid var(--accent-primary);
    padding: 1rem 2.5rem;
    text-transform: uppercase;
    text-decoration: none;
    display: block;
    margin: 0 auto;
    letter-spacing: 2px;
    transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease;
  }

  .cta-button:hover {
    background-color: var(--accent-primary);
    color: var(--color-black);
    transform: scale(1.05);
    text-decoration: none;
  }
</style>