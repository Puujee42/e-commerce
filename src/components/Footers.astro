<footer class="site-footer" role="contentinfo">
  <div class="footer-container container">
    
    <section class="footer-column footer-brand-info">
      <a href="/" class="footer-brand" aria-label="Go to BLKKK homepage">BLKKK</a>
      <p class="copyright">&copy; MMXXV // ALL RIGHTS RESERVED</p>
    </section>

    <nav class="footer-column footer-links" aria-labelledby="footer-info-heading">
      <h4 id="footer-info-heading">[ INFO ]</h4>
      <ul>
        <li><a href="/contact">CONTACT</a></li>
        <li><a href="/shipping">SHIPPING & RETURNS</a></li>
