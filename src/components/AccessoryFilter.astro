---
// src/components/AccessoryFilter.astro
const { activeFilter } = Astro.props; 
// The page will pass the current filter, e.g., "jewelry", "leather"
---
<div class="filter-wrapper container">
  <div class="filter-interface">
    <h4 class="filter-label">[ CLASSIFICATION ]</h4>
    <nav class="filter-options">
      <a href="/accessories" class:list={{ active: !activeFilter }}>[ ALL ]</a>
      <a href="/accessories/jewelry" class:list={{ active: activeFilter === 'jewelry' }}>[ JEWELRY ]</a>
      <a href="/accessories/leather" class:list={{ active: activeFilter === 'leather' }}>[ LEATHER ]</a>
      <a href="/accessories/headwear" class:list={{ active: activeFilter === 'headwear' }}>[ HEADWEAR ]</a>
      <a href="/accessories/misc" class:list={{ active: activeFilter === 'misc' }}>[ MISC ]</a>
    </nav>
  </div>
</div>

<style>
  .filter-wrapper {
    padding-bottom: 4rem; /* Spacing between filter and list */
  }

  /* The main container for the entire filter element */
  .filter-interface {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding: 2rem;
    border: 1px solid var(--border-color);
    background-color: #0a0a0a;
  }

  /* The "[ CLASSIFICATION ]" label */
  .filter-label {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--text-muted);
    opacity: 0.7;
    margin: 0;
  }

  /* The container for the actual filter links */
  .filter-options {
    display: flex;
    justify-content: center;
    flex-wrap: wrap; /* Allows wrapping on smaller screens */
    gap: 1rem;
  }

  .filter-options a {
    font-family: var(--font-mono);
    font-size: 1.1rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    color: var(--text-muted);
    padding: 0.8rem 1.5rem;
    border: 1px solid transparent; /* Placeholder for alignment */
    transition: color 0.3s ease, background-color 0.3s ease;
  }

  .filter-options a:hover {
    color: var(--color-white);
    background-color: var(--border-color);
  }

  /* The high-impact active state */
  .filter-options a.active {
    color: var(--color-black);
    background-color: var(--accent-primary);
    text-shadow: 0 0 5px var(--color-black);
    border-color: var(--accent-primary);
    box-shadow: 0 0 15px rgba(164, 0, 0, 0.5); /* Use the global dark red */
  }
</style>